<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#0073ff"
        android:textSize="14dp"
        android:id="@+id/textViewNameSkill"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid"
        android:padding="5dp"
        android:id="@+id/textViewPaidSkill"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Skill level"
        android:id="@+id/textViewSkillLevel"
        android:layout_below="@+id/textViewNameSkill"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewVerified"
        android:layout_below="@+id/textViewPaidSkill"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>